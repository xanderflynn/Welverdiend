<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Welverdiend7.Pages.Login"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Title="Login"
             BackgroundImageSource="bg.svg">


    <StackLayout>


        <VerticalStackLayout VerticalOptions="StartAndExpand">
            <Image HeightRequest="200" Margin="0,20,0,0" Source="Logo.PNG"></Image>
            <Label Text="Welverdiend Forestry (Pty) Ltd." TextColor="White" HorizontalOptions="CenterAndExpand"/>
        </VerticalStackLayout>




        <VerticalStackLayout  Padding="30" VerticalOptions="StartAndExpand">

            <Label FontAttributes="Bold" Margin="0,20,0,10" Text="Username" TextColor="White"/>
            <Frame HeightRequest="50" BorderColor="White"
       HasShadow="False"
       CornerRadius="12">
                <Entry x:Name="txtUsername" TextColor="White" Margin="-16,-16,-20,-20" BackgroundColor="Transparent"/>
                <Frame.Background>
                    <!--StartPoint defaults to (0,0)      
             Endpoint defaults to (1,1)-->
                    <LinearGradientBrush>
                        <GradientStop Color="#777B7D"
                          Offset="0.1" />
                        <GradientStop Color="#23292D"
                          Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
            </Frame>

            <Label Margin="0,20,0,10" Text="Password" TextColor="White"/>
            <Frame HeightRequest="50" BorderColor="White"
       HasShadow="False"
       CornerRadius="12">

                <Entry x:Name="txtPassword" IsPassword="True" TextColor="White" Margin="-16,-16,-20,-20" BackgroundColor="Transparent"/>

                <!--<Entry x:Name="txtPassword" TextColor="White" Margin="-16,-16,-20,-20" BackgroundColor="Transparent"/>-->

                <Frame.Background>
                    <!--StartPoint defaults to (0,0)      
             Endpoint defaults to (1,1)-->
                    <LinearGradientBrush>
                        <GradientStop Color="#777B7D"
                          Offset="0.1" />
                        <GradientStop Color="#23292D"
                          Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
            </Frame>
        </VerticalStackLayout>


        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand">
            <Label x:Name="barcodeResult" IsVisible="False" FontSize="20"/>
            <cv:CameraView IsVisible="False" x:Name="cameraView" WidthRequest="300" HeightRequest="200" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True"
                           BarcodeDetected="cameraView_BarcodeDetected"/>

