            <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand">
                <HorizontalStackLayout IsVisible="true" HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">

                    <Button x:Name="btnSubmit" Margin="10" BackgroundColor="#3DAD48" HorizontalOptions="FillAndExpand" WidthRequest="150" VerticalOptions="CenterAndExpand" Clicked="Button_Clicked" Text="Login"/>
                    <Button x:Name="btnadd" BackgroundColor="#3DAD48" Margin="10" HorizontalOptions="FillAndExpand" WidthRequest="150" Clicked="Button_Clicked_1" Text="Scan"/>

                </HorizontalStackLayout>
            </StackLayout>

            <Label Grid.Row="1" HorizontalOptions="Center" FontSize="Small" Text="By continuing, you agree to the terms and conditions." VerticalOptions="Start" TextColor="White"/>

